{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="col col-lg-4 offset-md-4 card mt-5 pt-2 pb-2">
        <div class="card-body">
            <h3 class="text-center">LOGIN</h3>
            {% if error %}
                <div class="mt-2 mb-2 alert alert-danger text-center" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            <form action="{{ path('app_login') }}" method="post">
                <div class="mb-3">
                    <label for="emailInput" class="form-label">Email</label>
                    <input type="email" class="form-control" id="emailInput" placeholder="name@example.com" name="_username">
                </div>
                <div class="mb-3">
                    <label for="passwordInput" class="form-label">Password</label>
                    <input class="form-control" id="passwordInput" type="password" name="_password">
                </div>
                <input type="hidden" name="_target_path" value="/dashboard">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Login</button>
                    <hr/>
                    <a href="{{ path('app_register') }}" class="btn btn-danger">Create an account</a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
