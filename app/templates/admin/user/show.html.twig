{% extends 'admin/base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ account.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ account.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ account.roles ? account.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ account.username }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ account.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ account.lastname }}</td>
            </tr>
            <tr>
                <th>Verified</th>
                <td>{{ account.verified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Disabled</th>
                <td>{{ account.disabled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-primary" href="{{ path('app_admin_user_edit', {'id': account.id}) }}">edit</a>

    {{ include('admin/user/_delete_form.html.twig') }}
{% endblock %}
