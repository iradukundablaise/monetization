{% extends 'dashboard/base.html.twig' %}
{% block title %}My account{% endblock %}
{% block body %}
    <div class="col col-lg-6 col-md-12 mt-4">
        <h3>Update your informations</h3>
        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'action': path('app_dashboard_account_page')}) }}
                {{ form_widget(form) }}
                <button class="btn btn-primary" type="submit">Save informations</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}